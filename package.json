{
  "name": "xylograph",
  "version": "0.8.2",
  "description": "Xylograph is multi canvas management library of wrapping Canvas API compatible library.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p .",
    "examples": "tsc -p examples/tsconfig.json && node examples/output/examples/src/index.js",
    "test": "npx jest",
    "test-watch": "npx jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shinndo/xylograph.git"
  },
  "author": "shinndo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shinndo/xylograph/issues"
  },
  "homepage": "https://github.com/shinndo/xylograph#readme",
  "dependencies": {},
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "app-root-path": "^3.0.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.3",
    "typescript": "^4.2.3",
    "canvas": "^2.7.0"
  },
  "types": "dist/index.d.ts",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
